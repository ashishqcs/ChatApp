<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/circleImageView2"
        android:layout_toRightOf="@+id/circleImageView2"
        android:text="User Name"
        android:maxLines="1"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="19sp"
        android:maxWidth="200dp"
        android:textStyle="normal"
        android:typeface="sans" />

    <TextView
        android:id="@+id/viewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="35dp"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:text="User Status"
        android:textColorLink="@color/colorPrimary"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/onlineView"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_dot" />

    <ImageView
        android:id="@+id/imgDone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:tint="@color/profileBlackDark"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="38dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_done_white_24dp" />

    <ImageView
        android:id="@+id/imgAllDone"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="78dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="38dp"
        android:tint="@color/colorPrimary"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_done_all_white_24dp" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="time"
        android:textSize="12sp"
        android:visibility="invisible" />

    <View
        android:layout_width="270dp"
        android:layout_height="0.5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="68dp"
        android:background="@color/profileBlackDark" />

    <TextView
        android:id="@+id/unseenMsgView"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="10"
        android:textColor="@color/colorTextwhite"
        android:textSize="11sp"
        android:visibility="invisible"
         />

</RelativeLayout>