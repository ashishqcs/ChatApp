<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.midcon.chatapp.Settings">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="User Name"
        android:textColor="@color/colorTextwhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Status of the user is shown here"
        android:textColor="@color/colorTextwhite"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="70dp"
        >

        <Button
            android:id="@+id/changeStatus"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="105dp"
            android:background="@color/colorTextorange"
            android:padding="15dp"
            android:text="Change Status"
            android:textColor="@color/colorTextwhite" android:layout_marginStart="105dp"/>

        <Button
            android:id="@+id/changeDP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorTextwhite"
            android:text="Change image"
            android:layout_marginLeft="105dp"
            android:paddingTop="10dp"
            android:layout_marginStart="105dp"/>
    </LinearLayout>

</RelativeLayout>
