<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/msg_sent_timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/msg_sent_View"
        android:layout_alignRight="@+id/msg_sent_View"
        android:layout_below="@+id/msg_sent_View"
        android:textColor="@color/profileBlackDark"
        android:text="time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/msg_sent_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/msg_sent_box"
        android:maxWidth="250dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="message "
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/messageSent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_done_white_24dp" />

    <ImageView
        android:id="@+id/doubleTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/msg_sent_timeView"
        android:layout_toEndOf="@+id/msg_sent_timeView"
        android:layout_toRightOf="@+id/msg_sent_timeView"
        android:backgroundTint="@color/colorPrimaryDark"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_done_all_white_24dp" />

    <ImageView
        android:id="@+id/pendingMsg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:layout_marginEnd="5dp" />

    <ImageView
        android:id="@+id/sendingFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/doubleTick"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_block_black_24dp" />

</RelativeLayout>